{
    "manifest_version": 2,
    "name": "TubeSnake",
    "version": "1.0.2",
    "description": "Snake never had to leave YouTube",
    "homepage_url": "https://n0vella.github.io",
    "icons": {
        "512": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://www.youtube-nocookie.com/*"
            ],
            "js": [
                "dist/index.js"
            ],
            "css": [
                "dist/tubesnake.css"
            ],
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{792c6cee-e45d-4f5b-8584-e4ce5993d3c8}"
        }
    }
}